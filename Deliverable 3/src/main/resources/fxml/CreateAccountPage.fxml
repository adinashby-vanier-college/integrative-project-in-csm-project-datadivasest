<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!--fixed all the red issues-->

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox fx:id="vBox" alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="signUpImgView" fitHeight="100.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="SOMETIMES">
               <VBox.margin>
                  <Insets bottom="50.0" />
               </VBox.margin></ImageView>
            <VBox prefHeight="150.0" prefWidth="210.0" spacing="10.0">
               <children>
                  <VBox prefHeight="56.0" prefWidth="210.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username">
                           <font>
                              <Font size="36.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="50.0" />
                           </VBox.margin></Text>
                        <TextField fx:id="usernameCAIn" prefHeight="100.0">
                           <font>
                              <Font size="18.0" />
                           </font></TextField>
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </VBox>
                  <VBox prefHeight="104.0" prefWidth="210.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password">
                           <font>
                              <Font size="36.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="50.0" />
                           </VBox.margin></Text>
                        <PasswordField fx:id="passwordCAIn">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </PasswordField>
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </VBox>
               </children>
            </VBox>
            <Label fx:id="messageLbl" alignment="CENTER_RIGHT" contentDisplay="RIGHT" textAlignment="RIGHT" textFill="#dc1212">
               <font>
                  <Font size="20.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="150.0">
               <children>
                  <Button fx:id="createAccCABtn" mnemonicParsing="false" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: pink;" text="Create Account">
                     <font>
                        <Font size="22.0" />
                     </font></Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <Button fx:id="backBtn" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" text="&lt;" textOverrun="CLIP" BorderPane.alignment="TOP_LEFT">
         <BorderPane.margin>
            <Insets left="100.0" top="100.0" />
         </BorderPane.margin>
         <font>
            <Font name="System Bold" size="36.0" />
         </font></Button>
   </top>
</BorderPane>
